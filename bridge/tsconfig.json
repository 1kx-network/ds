{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "rootDirs": [
        "./src"
    ],
    "baseUrl": "src"
  },
  "include": [
      "./src/index.ts"
  ],
  "exclude": [
      "./node_modules",
      "../node_modules"
  ],
  "references": [
      { "path": "../core" }
  ]
}
