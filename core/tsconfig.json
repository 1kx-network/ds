{
  "compilerOptions": {
    "target": "es6",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "lib": ["dom", "dom.iterable", "esNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDirs": [
      "src"
    ],
    "paths": {
        "@core": [
            "./src/index.ts"
        ],
        "@core/*": [
            "./src/*"
        ],
    },
  },
  "include": ["src"],
  "references": []
}
